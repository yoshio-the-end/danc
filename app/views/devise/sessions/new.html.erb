<div class="wrapper">
  <div class="sign_box">
    <div class="sign_left">
      <img src="/login.png">
    </div>
    <div class="sign_right">
      <img src="/danclogo_black.png">
      <h2>sign in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email,class: "text", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password,class: "text", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン",class: "field__btn" %>
          <%= link_to "トップへ戻る", root_path ,class: "field__btn"%>
        </div>
      <% end %>
